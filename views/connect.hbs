<section class="section">

    <div class="container is-fullhd">

        <form action="/user/connectAuth" method="POST" enctype="multipart/form-data">
            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" type="email" name="email" placeholder="Votre email">
                </div>
            </div>

            <div class="field">
                <p class="control has-icons-left">
                    <input class="input" type="password" name="password" placeholder="Votre mot de passe">
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button class="button is-link">Se connecter</button>
                </div>
                <div class="control">
                    <button class="button is-link is-light">Retour</button>
                </div>
            </div>
        </form>
    </div>


</section>